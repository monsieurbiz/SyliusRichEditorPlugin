{% set highlightJsEnabled = monsieurbiz_sylius_rich_editor.highlight_js.shop_enabled|default('false') %}
{% set highlightJsTheme = monsieurbiz_sylius_rich_editor.highlight_js.theme|default('default') %}

{% if highlightJsEnabled == 'true' %}
    <script src="{{ asset('bundles/monsieurbizsyliusricheditorplugin/js/rich-editor-highlight.js') }}"></script>
    {% if highlightJsTheme == 'default' %}
        <link rel="stylesheet" href="{{ asset('bundles/monsieurbizsyliusricheditorplugin/css/rich-editor-highlight.css') }}">
    {% else %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.10.0/build/styles/{{ highlightJsTheme|escape('html_attr') }}.min.css">
    {% endif %}
{% endif %}
