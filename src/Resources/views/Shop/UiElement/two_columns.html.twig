{#
UI Element template
type: two_columns
element fields :
    firstColumnWidth
    marginAuto
    reverseMobile
    firstColumn
    secondColumn
#}

{% set firstColumnWidth = element.firstColumnWidth|default('1/2') %}
{% set marginAutoClass = element.marginAuto is defined and element.marginAuto ? 'm-auto' : '' %}
{% set flexClassMobile = element.reverseMobile is defined and element.reverseMobile ? 'flex-column-reverse' : 'flex-column' %}

{% set width_1_5 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_1_5') %}
{% set width_1_4 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_1_4') %}
{% set width_1_3 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_1_3') %}
{% set width_2_5 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_2_5') %}
{% set width_1_2 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_1_2') %}
{% set width_3_5 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_3_5') %}
{% set width_2_3 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_2_3') %}
{% set width_3_4 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_3_4') %}
{% set width_4_5 = constant('MonsieurBiz\\SyliusRichEditorPlugin\\Form\\Type\\UiElement\\TwoColumnsType::WIDTH_4_5') %}

{% set columnClasses = {
    (width_1_5): {'first': 'col-md-2', 'second': 'col-md-10'},
    (width_1_4): {'first': 'col-md-3', 'second': 'col-md-9'},
    (width_1_3): {'first': 'col-md-4', 'second': 'col-md-8'},
    (width_2_5): {'first': 'col-md-5', 'second': 'col-md-7'},
    (width_1_2): {'first': 'col-md-6', 'second': 'col-md-6'},
    (width_3_5): {'first': 'col-md-7', 'second': 'col-md-5'},
    (width_2_3): {'first': 'col-md-8', 'second': 'col-md-4'},
    (width_3_4): {'first': 'col-md-9', 'second': 'col-md-3'},
    (width_4_5): {'first': 'col-md-10', 'second': 'col-md-2'}
} %}

{% set selectedClasses = columnClasses[firstColumnWidth]|default({'first': 'col-md-6', 'second': 'col-md-6'}) %}
<div class="d-flex {{ flexClassMobile }} flex-md-row py-5 py-lg-7.5 ui-element-two-columns gap-3">
    <div class="col-12 {{ selectedClasses.first }} {{ marginAutoClass }}">{{ monsieurbiz_richeditor_get_elements(element.firstColumn)|monsieurbiz_richeditor_render_elements }}</div>
    <div class="col-12 {{ selectedClasses.second }} {{ marginAutoClass }}">{{ monsieurbiz_richeditor_get_elements(element.secondColumn)|monsieurbiz_richeditor_render_elements }}</div>
</div>
